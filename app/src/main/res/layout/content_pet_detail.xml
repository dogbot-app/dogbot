<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_pet_detail"
        tools:context="codes.ulbricht.imanuel.dogbot.activities.PetDetailActivity"
        android:visibility="visible" android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_margin="@dimen/layout_margin">
    <Switch
            android:text="Leckerli vorrätig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:checked="true"
            android:focusable="false"
            android:textAllCaps="false"/>
    <Switch
            android:text="Ball verfügbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:checked="true"
            android:focusable="false"
            android:textAllCaps="false"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Wassertank"
                android:textAppearance="@android:style/TextAppearance.Material"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:progress="50"
                android:max="100"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Futtertank"
                android:textAppearance="@android:style/TextAppearance.Material"/>
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="40"
                android:max="100"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Akku"
                android:textAppearance="@android:style/TextAppearance.Material"
        />
        <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="60"
                android:max="100"/>
    </LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ruhemodus"/>

</LinearLayout>
